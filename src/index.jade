extends _layouts/base

include _modules/desc/desc
include _modules/skills/skills

block content
  .wrapper
    .background
    .two-face.mbn.mtm
      .two-face__left
        .two-face__content.two-face__content--no-padding
          .face-container
            img.face(src='images/face.svg')
      .two-face__right
        .two-face__content.two-face__content--no-padding
          .face-container
            img.face(src='images/face-ascii.svg')
    .two-face.mbl
      .two-face__left
        .two-face__content
          h1 
            = site.data.global.firstName 
            | 
            span.sims= site.data.global.lastName 
          h2 
            = site.data.global.designTitle
            br.sims
            span.sims= site.data.global.devTitle
          p= site.data.global.function
          p= site.data.global.city
          a.sims(href="mailto:#{site.data.global.mail}")= site.data.global.mail
          a.sims(href="tel:#{site.data.global.tel}")= site.data.global.tel
          a.social(href="#{site.data.global.dribbbleUrl}", target="_blank")
            i.icon-dribbble
          a.social.sims(href="#{site.data.global.githubUrl}", target="_blank")
            i.icon-github
      .two-face__right
        .two-face__content
          h1= site.data.global.lastName
          h2= site.data.global.devTitle
          a(href="mailto:#{site.data.global.mail}")= site.data.global.mail
          a(href="tel:#{site.data.global.tel}")= site.data.global.tel
          a.social(href="#{site.data.global.githubUrl}", target="_blank")
            i.icon-github
              
    .two-face.separ.mbl
      .two-face__left
        .two-face__content
          
          +skillsDesign()
          div.sims
            +skillsDev()
      .two-face__right
        .two-face__content
          +skillsDev()
            
    each val in site.data.projects
      .two-face.separ.work
        .two-face__left
          .two-face__content
            div.info.sims
              +desc(val)
            .work__img-container
              each imgs in val.project[0].images
                img(src="#{imgs}")
        .two-face__right
          .two-face__content
            .two-face__scroll
              +desc(val)
